{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "noImplicitThis": true,
    "jsx": "react",
    "lib": ["es5", "es2020", "dom"],
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "module": "es2022",
    "moduleResolution": "node",
    "target": "es5"
  },
  "types": [
    "node",
    "webpack-env",
    "./node_modules/vue/types"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "**/node_modules/**"
  ]
}
