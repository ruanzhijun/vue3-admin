{
  "name": "node-mongodb-server",
  "version": "1.0.0",
  "scripts": {
    "build": "rimraf app && tsc -p ./",
    "start": "cross-env NODE_ENV=local-dev TS_NODE_TRANSPILE_ONLY=true ts-node -r tsconfig-paths/register src/main.ts",
    "eslint": "eslint src/**/*.ts --fix",
    "doc": "rimraf doc/ && node scripts/error-code.js && apidoc -i src/ -o doc/"
  },
  "dependencies": {
    "@nestjs/common": "9.4.1",
    "@nestjs/core": "9.4.1",
    "@nestjs/platform-express": "9.4.1",
    "@nestjs/typeorm": "9.0.1",
    "bluebird": "3.7.2",
    "config": "3.3.9",
    "crypto-js": "4.1.1",
    "joi": "17.9.2",
    "jsonwebtoken": "9.0.0",
    "lib-qqwry": "1.3.2",
    "lodash": "4.17.21",
    "log4js": "6.9.1",
    "moment-timezone": "0.5.43",
    "mongodb": "3.6.0",
    "nodemailer": "6.9.2",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "share-tracer": "0.0.50",
    "typeorm": "0.3.10"
  },
  "devDependencies": {
    "@types/bluebird": "3.5.38",
    "@types/mocha": "10.0.1",
    "@types/node": "20.1.7",
    "@typescript-eslint/eslint-plugin": "5.59.6",
    "@typescript-eslint/parser": "5.59.6",
    "apidoc": "1.0.2",
    "cross-env": "7.0.3",
    "eslint": "8.40.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "husky": "8.0.3",
    "mkdirp": "3.0.1",
    "mocha": "10.2.0",
    "nyc": "15.1.0",
    "react": "18.2.0",
    "rimraf": "5.0.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.0.4"
  },
  "husky": {
    "hooks": {
      "pre-push": "eslint src/**/*.ts && npm run build && rimraf app"
    }
  },
  "nyc": {
    "cache": false,
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/node_modules/**"
    ],
    "reporter": [
      "text",
      "text-summary"
    ],
    "extension": [
      ".ts"
    ]
  }
}
